.eea-notifier {
  position: fixed;
  background: #FFF;
  border-top: 2px solid #006699;
  bottom: 0;
  height: 80px;
  width: 100%;
  z-index: 4;
  margin-left: -24%;
  padding-left: 24%;
  will-change: transform;
  opacity: 0;
  transition-property: opacity, margin-bottom;
  transition-duration: 0.3s, 0.25s;
  transition-timing-function: ease-out; }

.eea-notifier--active {
  margin-bottom: 0;
  opacity: 1; }

.eea-notifier__content {
  overflow: hidden;
  padding: 0.5em; }

.eea-notifier__figure {
  float: left;
  margin-right: 0.5em; }

.eea-to-top {
  width: 100%;
  display: block;
  text-align: center;
  margin: 2em 0; }

